#!/usr/bin/make -f
# -*- makefile -*-

#export DH_VERBOSE=1

build:
	echo noop

binary:
	mkdir -p usr/bin
	curl  --fail -sS -L \
		-o usr/bin/flannel \
		"https://github.com/coreos/flannel/releases/download/v{{ .Version }}/flanneld-{{ .Arch }}"
	chmod +x usr/bin/flannel
	dh_testroot
	dh_auto_install
	dh_shlibdeps
	dh_install
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb

%:
	dh $@
